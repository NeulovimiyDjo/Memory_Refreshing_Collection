<Window
	x:Class="QRCodeSender.SettingsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:QRCodeSender"
	ResizeMode="NoResize"
	Title="Настройки"
	Height="100"
	Width="300"
	Closed="Window_Closed">
	<FrameworkElement.DataContext>
		<local:SettingsWindowViewModel
			x:Name="VM" />
	</FrameworkElement.DataContext>
	<StackPanel>
		<TextBlock>Ping</TextBlock>
		<TextBox
			Height="24"
			Text="{Binding Ping}" />
	</StackPanel>
</Window>
